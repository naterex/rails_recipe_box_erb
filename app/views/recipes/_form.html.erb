<%= simple_form_for @recipe, html: { multipart: true } do |f| %>

  <%= f.input :title, input_html: { class: 'form-control form-horizontal' } %>
  <br>
  <%= f.input :description, input_html: { class: 'form-control form-horizontal', rows: "4" } %>
  <br>
  <%= f.file_field :image, as: :file %>
  <br>
  <%= f.button :submit, class: "btn btn-success" %>

<% end %>
