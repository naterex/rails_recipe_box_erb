<div class="main_content">
  <div id="recipe_top">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @recipe.image.url(:medium), class: "recipe_image" %>
      </div>
      <div class="col-md-8">
        <div id="recipe_info">
          <h1><%= @recipe.title %></h1>
          <p><%= @recipe.description %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div id="ingredients">
        <h2>Ingredients</h2>
        <% @recipe.ingredients.each do |ingredient| %>
          <li><%= ingredient.name %></li>
        <% end %>
      </div>
    </div>

    <div class="col-md-6">
      <div id="directions">
        <h2>Directions</h2>
        <% @recipe.directions.each do |direction| %>
          <li><%= direction.step %></li>
        <% end %>
      </div>
    </div>
  </div>

  <% if user_signed_in? && (@recipe.user == current_user) %>
    <div class="row">
      <div class="col-md-12">
        <%= link_to "Edit Recipe", edit_recipe_path(@recipe), class: "btn btn-success" %>
        <%= link_to "Delete", @recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <%= link_to "Back", root_path, class: "btn btn-default add-button" %>
    </div>
  </div>

</div>
