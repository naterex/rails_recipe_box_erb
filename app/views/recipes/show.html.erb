<h1><%= @recipe.title %></h1>
<%= image_tag @recipe.image.url(:medium) %>
<div>
  <%= @recipe.description %>
</div>
<br>
<div>
  <%= link_to "Edit", edit_recipe_path(@recipe), class: "btn btn-success" %>
  <%= link_to "Delete", @recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
</div>
<br>
<div>
  <%= link_to "Back", root_path, class: "btn btn-default" %>
</div>
